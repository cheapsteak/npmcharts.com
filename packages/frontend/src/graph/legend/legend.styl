$nubRadius = 7px

.legend
  display: flex
  flex-direction: column
  align-items: flex-start;
  padding: 10px
  font-weight: 500
  filter: drop-shadow(2px 2px 0px #fff) drop-shadow(-2px -2px 0px #fff) drop-shadow(2px -2px 0px #fff) drop-shadow(-2px 2px 0px #fff)
  background-image: linear-gradient(to right, #ffffff1a, transparent);

  font-size: 15px
  @media (max-width: 500px)
    font-size: 11px
  .date
    font-weight: 600
    margin-bottom: 0.2em
    padding-left: 0.2em
  .modules
    display: table  
    margin-left: -25px
    .module
      display: table-row
      & > div
        display: table-cell
        &:last-child
          padding-left: 8px
    .package-downloads-heading
      min-width: 6em
    .package-name-heading
      text-indent: 10px
      text-align: left
  .module
    display: flex
    justify-content: center
    align-items: center
    margin-left: 0.5em
    .name-wrapper
      text-align: left
    .downloads
      position: relative
      text-align: right
    .name
      position: relative
      display: inline-block
    .remove-entry-button
      background: none
      color: inherit
      border: none
      padding: 6px
      cursor: pointer
      .nub
        position: relative
        top: 0
        bottom: 0
        margin-top: auto
        margin-bottom: auto
        height: $nubRadius
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), opacity 0.3s linear;
        transform: scale(1);
        opacity: 0.5
        &:before, &:after
          content: ''
          display: block
          width: $nubRadius
          height: $nubRadius
          border-radius: 50%
          margin-right: 0.2em
          transition: all 0.3s
          background-color: var(--module-color)
        &:after
          position: absolute
          top: 0
          bottom: 0
          margin-top: auto
          margin-bottom: auto
      &:hover
        .nub
          opacity: 0.9
          transform: scale(1.15);

          &:before
            border-radius: 0
            transform: rotateZ(45deg) scaleX(0.2) scaleY(1.3)
          &:after
            border-radius: 0
            transform: rotateZ(-45deg) scaleX(0.2) scaleY(1.3)