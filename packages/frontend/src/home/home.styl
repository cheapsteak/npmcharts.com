$fgColor = #333
$unimportantFgColor = #192229
$unimportantFgColorLight = #829bb0bb
// $bgcolor = #272B34
// $bgcolor = #082f45
$bgcolor = #f3f3f5
$popupTextColor = $fgColor
// $logoColor = #1288EF
$logoColor = #d85151
// $logoColor = #DA605C;
$subheadingColor = #738fa5
$inputBg = #f9f9ff

@keyframes moving-gradient {
  0% { background-position: left bottom; }
  100% { background-position: right bottom; }
}

.opaque-once-stylesheet-loads {
  opacity: 1 !important;
}

.page-header
  padding: 1em
  color: #fff
  background: $bgcolor
  border-bottom: 1px solid #ccc
  box-sizing: border-box
  flex-shrink: 0
  position: relative
  &:before
    content: '';
    width: 100%;
    height: 2px;
    background: #f00;
    background-image: linear-gradient(to right, #2196f3, #a2d4f7);
    background-repeat: repeat;
    bottom: -1px;
    left: 0;
    position: absolute;
  &.loading
    &:before
      background-size: 50% 100%;
      background-image: linear-gradient(to right, #79bef9, #b5ddff, #79bef9);
      animation: moving-gradient 1s linear infinite
  .heading
    line-height: 0.8
    margin-top: 10px
    margin-bottom: 14px
    display: flex
    align-items: center
    @media (max-width: $small)
      flex-direction: column;
    .identity
      font-size: 14px
      font-size: 35px
      font-weight: 600
      color: #333
      text-decoration: none
      cursor: pointer
      display: inline-block
      color: $logoColor
    .link-home
      color: #1288EF
      font-size: 16px
      font-weight: 600
      @media (max-width: $small)
        font-size: 22px
  .sub-heading
    &, & a
      color: $subheadingColor
    margin: 0
    font-size: 16px
    font-weight: 400
    display: block
    line-height: 1.2
    @media (min-width: $small)
      margin-left: 10px;
    @media (max-width: $small)
      font-size: 14px
      margin-top: 6px
      text-align: center
  .header-controls-wrapper
    display: flex
    flex-direction: row
    align-items: flex-end
  .graph-config
    flex-grow: 1
    font-size: 12px
    color: $unimportantFgColor
    display: inline-flex
    align-items: baseline
    opacity: 0.6
    transition: opacity 0.2s ease
    margin-left: 20px
    @media (max-width: $small)
      display: none
    label
      cursor: pointer
      margin-right: 0.5em
    &:hover
      opacity: 1
    .outliers-explanation
      display: inline-flex
      margin-left: 0.3em
      position: relative
      padding-top: 3px
      padding-bottom: 3px
      cursor: help
      &:not(:hover)
        .icon-help
          fill: #8BA5DB
        .explanation-text
          display: none
      .icon-help
        width: 12px
        height: 12px
        fill: #AFAFAF
      .explanation-text
        position: absolute
        z-index: 1
        right: 0
        top: 2em
        width: 16em
        padding: 1em
        background: #fff
        border-radius: 3px
        border: 1px solid #EDEDED
        color: $popupTextColor
  .include-item
    user-select: none
    margin-left: 0.3em
    display: flex
    align-items: center
    @media (max-width: $small)
      font-size: 10px
  .minimal-mode
    cursor: pointer;
  .download-btn
    margin-left: 6px
    cursor: pointer;
  .package-input
    line-height: 1.5
    text-indent: 4px
  input.package-input
    background-color: $inputBg
    border: 0
  .add-package-btn
    vertical-align: middle
    padding: 1px 6px 2px;
    color: $unimportantFgColor
    &:disabled
      color: $unimportantFgColorLight
      background: rgba(0, 0, 0, 0)
      border: 0
  .github-btn
    vertical-align: middle
main
  width: 100%
  display: flex
  flex-direction: row
  transition: opacity 0.15s
  &.loading
    opacity: 0.3

  .chart-container
    width: 100%;
    display: flex
    flex-direction: column
  .chart
    background-color: #fff;
    position: relative
    flex-grow: 1
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: stretch;
    & > svg
      width: 100%
      flex-grow: 1
  .sample-matches
    margin: 6px 16px 12px
    &:hover
      & .caption, & .match, & .tweet-this-chart
        opacity: 0.6
    @media (max-width: $small)
      font-size: 12px
    .caption
      display: inline-block
      color: $unimportantFgColor
      // margin: 0
      font-weight: 500
      font-size: 11px
      text-indent: 4px
      margin-right: -4px
    .match
      display: inline
      text-decoration none
      color: $unimportantFgColorLight
      padding: 4px 8px
      margin: 0 -3px
      font-size: 13px
      border-radius: 20px
      &:hover
        color: $unimportantFgColor
        opacity: 1 !important
        transform: scale(1.05)
        box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.2)
        background-color: rgba(255,255,255,1)

      &.router-link-active
        cursor: default
        opacity: 1 !important

      @media (max-width: $small)
        &:nth-child(n+5)
          display: none
  .package-name
    font-weight: 500
    transition: color 1s
  .vs
    font-size: 12px
    margin: 0 -1px
  .no-packages-selected
    flex-grow: 1
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
footer
  padding: 1em 16px 0.5em
  display: flex
  justify-content: space-between
  align-items: center
  color: #8D90A4
  .about
    font-size: 10px
    margin: 0
    .created-by
      color: inherit
      margin: 0
      display: inline-block
      cursor: pointer
      width: 175px
      @media (max-width: $small)
        width: 125px
    .maple-leaf-icon
      width: 16px
      margin-bottom: -4px
      opacity: 0.5
      transition: opacity 0.2s
    &:hover .maple-leaf-icon
      opacity: 1
  .disclaimer
    font-size: 10px
    text-align: right
  .repo-link
    opacity: 0.2
    transition: opacity 0.2s ease
    padding: 1em
    display: flex
    flex: 1
    justify-content: center
    &:hover
      opacity: 0.6
  @media (max-width: $small)
    padding: 5px 16px 4px

.tweet-this-chart
  cursor: pointer
  text-decoration: none
  transition: all 0.2s
  background-color: rgba(255,255,255,0)
  position: relative
  z-index: 1
  ~ .caption
    margin-left: -12px
  &:hover
    &&
      opacity: 1
    transform: scale(1.05)
    box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.2)
    background-color: rgba(255,255,255,1)
    svg
      animation-name: swing
      animation-duration: 1.3s
      animation-fill-mode: both
  &:active
    box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.2)

.package-entry
  &:not(:first-child)
    margin-left: 0.3em;
  a
    text-decoration: none
    &:hover
      text-decoration: underline
  .package-name
    cursor: pointer
    position: relative
    letter-spacing: -0.2px
    & + .package-linkout
      margin-left: 0.5em
  .package-size
    font-size: 0.7em;
    font-weight: 500;
    margin-left: -0.2em;
