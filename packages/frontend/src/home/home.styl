// $bgcolor = #272B34
$fgColor = #333
$unimportantFgColor = #5f809c
$unimportantFgColorLight = #829bb0
$bgcolor = #F1F1F1
$popupTextColor = $fgColor
// $logoColor = #1288EF
$logoColor = #d85151
// $logoColor = #DA605C;
$subheadingColor = #9fb2c2
$inputBg = #f9f9ff

@keyframes moving-gradient {
  0% { background-position: left bottom; }
  100% { background-position: right bottom; }
}

.page-header
  padding: 1em
  color: #fff
  background: $bgcolor
  border-bottom: 1px solid #ccc
  box-sizing: border-box
  flex-shrink: 0
  position: relative
  &:before
    content: '';
    width: 100%;
    height: 3px;
    background: #f00;
    background-image: linear-gradient(to right, #2196f3, #a2d4f7);
    background-repeat: repeat;
    bottom: -1px;
    left: 0;
    position: absolute;
  &.loading
    &:before
      background-size: 50% 100%;
      background-image: linear-gradient(to right, #79bef9, #b5ddff, #79bef9);
      animation: moving-gradient 1s linear infinite
  .heading
    line-height: 0.8
    margin-top: 10px
    margin-bottom: 14px
    display: flex
    align-items: center
    @media (max-width: $small)
      flex-direction: column;
    .identity
      font-size: 14px
      font-size: 35px
      font-weight: 600
      color: #333
      text-decoration: none
      cursor: pointer
      display: inline-block
      color: $logoColor
    .link-home
      color: #1288EF
      font-size: 16px
      font-weight: 600
      @media (max-width: $small)
        font-size: 22px
  .sub-heading
    &, & a
      color: $subheadingColor
    margin: 0
    font-size: 16px
    display: block
    line-height: 1.2
    @media (min-width: $small)
      margin-left: 10px;
    @media (max-width: $small)
      font-size: 14px
      margin-top: 6px
      text-align: center
  .header-controls-wrapper
    display: flex
    flex-direction: row
    align-items: flex-end
  .graph-config
    flex-grow: 1
    font-size: 12px
    color: $unimportantFgColor
    display: inline-flex
    align-items: center
    opacity: 0.6
    transition: opacity 0.2s ease
    margin-left: 20px
    @media (max-width: $small)
      display: none
    label
      cursor: pointer
      margin-right: 0.5em
    &:hover
      opacity: 1
    .outliers-explanation
      display: inline-flex
      margin-left: 0.3em
      position: relative
      padding-top: 3px
      padding-bottom: 3px
      cursor: help
      &:not(:hover)
        .icon-help
          fill: #8BA5DB
        .explanation-text
          display: none
      .icon-help
        width: 12px
        height: 12px
        fill: #AFAFAF
      .explanation-text
        position: absolute
        z-index: 1
        right: 0
        top: 2em
        width: 16em
        padding: 1em
        background: #fff
        border-radius: 3px
        border: 1px solid #EDEDED
        color: $popupTextColor
  .include-item
    user-select: none
    margin-left: 0.3em
    display: flex
    align-items: center
    @media (max-width: $small)
      font-size: 10px
  .minimal-mode
    margin-left: auto
    cursor: pointer;
  .download-btn
    margin-left: 6px
    cursor: pointer;
  .package-input
    line-height: 1.5
    text-indent: 4px
  input.package-input
    background-color: $inputBg
    border: 0
  .add-package-btn
    vertical-align: middle
    padding: 4px 6px;
    &:disabled
      background: rgba(0, 0, 0, 0)
      border: 0
  .github-btn
    vertical-align: middle
main
  width: 100%
  display: flex
  flex-direction: row
  transition: opacity 0.15s
  &.loading
    opacity: 0.3

  .chart-container
    width: 100%;
    display: flex
    flex-direction: column
  .chart
    background-color: #fff;
    position: relative
    flex-grow: 1
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: stretch;
    & > svg
      width: 100%
      flex-grow: 1
  .sample-matches
    margin: 6px 16px 12px
    @media (max-width: $small)
      font-size: 12px
    .caption
      display: inline-block
      color: $unimportantFgColor
      // margin: 0
      font-weight: 500
      font-size: 11px
      text-indent: 8px
    .match
      display: inline
      text-decoration none
      color: $unimportantFgColorLight
      list-style-type: disc

      &.v-link-active
        cursor: default
      &:not(:last-child)
        margin-right: 14px
      @media (max-width: $small)
        &:nth-child(n+3)
          display: none
  .match
    cursor: pointer
    &:hover:not(.v-link-active)
      text-shadow: 1px 1px 3px #D9E7EF
  .package-name
    font-weight: 500
    transition: color 1s
  .vs
    font-size: 12px
    margin: 0 -1px
  .no-packages-selected
    flex-grow: 1
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
footer
  padding: 1em 16px 0.5em
  display: flex
  justify-content: space-between
  color: #8D90A4
  .about
    font-size: 10px
    margin: 0
    .created-by
      color: inherit
      margin: 0
      text-decoration: none
    .maple-leaf-icon
      width: 16px
      margin-bottom: -4px
      opacity: 0.5
      transition: opacity 0.2s
    &:hover .maple-leaf-icon
      opacity: 1
  .disclaimer
    font-size: 10px
  .repo-link
    opacity: 0.2
    transition: opacity 0.2s ease
    padding: 1em
    &:hover
      opacity: 0.6
  @media (max-width: $small)
    padding: 5px 16px 4px

.tweet-this-chart
  cursor: pointer
  color: #1da1f2
  font-size: 11px
  font-weight: 500
  display: inline-block
  padding: 4px 8px
  margin-left: -4px
  text-decoration: none
  transition: all 0.2s
  border-radius: 20px
  background-color: rgba(255,255,255,0)
  position: relative
  z-index: 1
  svg
    width: 12px
    height: auto
  ~ .caption
    margin-left: -12px
  ~ .caption, ~ .matches
    transition: all 0.2s
  &:hover
    transform: scale(1.05)
    box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.2)
    background-color: rgba(255,255,255,1)
    svg
      animation-name: swing
      animation-duration: 1.3s
      animation-fill-mode: both
    ~ .caption, ~ .matches
      opacity: 0.3
  &:active
    box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.2)

.package-linkout
  cursor: pointer
  position: relative
  text-decoration: none
  &:before
    content: '\f14c'
    font: normal normal normal 14px/1 FontAwesome
    position: absolute
    right: 0
    top: -6px
    font-size: 10px
    opacity: 0
    transition: 0.2s ease
    transform: translateX(-3px) translateY(3px)
  &:hover
    text-decoration: underline
    &:before
      opacity: 0.9
      transform: translateX(0) translateY(0)
  &:not(:last-child):after
    content: ', '
    position: absolute
  & + .package-linkout
    margin-left: 0.5em
